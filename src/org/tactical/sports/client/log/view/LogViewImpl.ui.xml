<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.panel {
			background-color: ivory;
		}
	</ui:style>

		<g:LayoutPanel>
			<g:layer>
				<g:SplitLayoutPanel ui:field="m_rootView">
						<g:east size="254.0">
							<g:ScrollPanel height="100%" ui:field="m_logScroller">
								<g:VerticalPanel ui:field="m_logView" height="100%" width="100%"/>
							</g:ScrollPanel>
						</g:east>
						<g:center>
							<g:ScrollPanel>
								<g:SimplePanel  ui:field="m_mainView" width="100%" height="100%"/>
							</g:ScrollPanel>
						</g:center>
					</g:SplitLayoutPanel>
			</g:layer>
		</g:LayoutPanel>
	
</ui:UiBinder>
