<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='res' type='org.tactical.sports.client.resources.Res'/>
	
	<g:HTMLPanel styleName="{res.css.mainPanel}" width="450px">
		<g:CaptionPanel styleName="{res.css.defaulfMargin}" captionText="Match list" ui:field="m_matchPanel">
			<g:VerticalPanel width="100%" ui:field="m_matchList">
			</g:VerticalPanel>
		</g:CaptionPanel>
		<g:Label styleName="{res.css.emptyListLabel}" text="" visible="false" ui:field="m_emptyListLabel"/>
		<g:Button styleName="{res.css.defaulfMargin}" text="Create a match!" ui:field="m_createMatchButton" width="410px"></g:Button>
	</g:HTMLPanel>
</ui:UiBinder> 